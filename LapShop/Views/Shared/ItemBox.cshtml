@{
}
@model Domains.Models.VwItem

<div class="img-wrapper">
    <div class="front">
        <a asp-controller="home" asp-action="Details" asp-route-entityId="@Model.ItemId">
            <img src="~/Uploads/Items/@Model.ImageName"
                 class="img-fluid blur-up lazyload bg-img" alt="">
        </a>
    </div>
    <div class="cart-info cart-wrap">
        <a href="javascript:void(0)" title="Add to Wishlist" tabindex="0">
            <i class="ti-heart"
               aria-hidden="true"></i>
        </a>
        <a asp-controller="home" asp-action="Details" asp-route-entityId="@Model.ItemId" data-toggle="modal" data-target="#quick-view" title="Quick View" tabindex="0">
            <i class="ti-search" aria-hidden="true"></i>
        </a>
        <a asp-controller="home" asp-action="Details" asp-route-entityId="@Model.ItemId" title="Compare" tabindex="0">
            <i class="ti-reload"
               aria-hidden="true"></i>
        </a>
    </div>
    <a asp-controller="Order" asp-action="AddToCart" asp-route-itemId="@Model.ItemId"
       class="add-button" >
        add to
        cart
    </a>
</div>
<div class="product-detail">
    <div class="rating">
        <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
    </div>
    <a asp-controller="home" asp-action="Details" asp-route-entityId="@Model.ItemId">
        <h6>@Model.ItemName</h6>
    </a>
    <h4>$@Model.PurchasePrice</h4>
</div>