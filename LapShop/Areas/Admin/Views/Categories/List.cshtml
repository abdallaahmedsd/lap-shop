@model List<TbCategory>
@section Styles {
    <!-- Plugin css for this page -->

    <link rel="stylesheet" href="~/Admin/assets/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <!-- End plugin css for this page -->
}
<div class="content-wrapper">
    <div class="page-header">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-element active" aria-current="page">Categories</li>
            </ol>
        </nav>
    </div>
    <div class="card">
        <div class="card-body">
            <a asp-controller="Categories" asp-action="Edit" asp-area ="Admin" type="button" class="btn btn-outline-success btn-fw"> New Item</a>
            <h4 class="card-title">Data table</h4>
            <div class="row">
                <div class="col-12">
                    <table id="order-listing" class="table">
                        <thead>
                            <tr>
                                <th style="text-align: left;">Category name</th>
                                <th style="text-align: right;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var @category in Model)
                            {
                                <tr>

                                    <td>
                                        <label class="badge badge-info">@category.CategoryName</label>
                                    </td>
                                    <td style="text-align: right;">
                                        <a asp-controller="categories" asp-action="edit"
                                           asp-area="admin" 
                                        asp-route-elementId="@category.CategoryId"
                                        class="btn btn-outline-primary">View</a>
                                        <a asp-controller="categories" asp-action="delete" asp-area="admin"
                                           asp-route-elementId="@category.CategoryId"
                                           class="btn btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- content-wrapper ends -->
@section Scripts {
    <!-- Plugin js for this page -->
    <script src="~/Admin/assets/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Admin/assets/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page -->
    <!-- Custom js for this page -->
    <script src="~/Admin/assets/js/data-table.js"></script>
    <!-- End custom js for this page -->
}